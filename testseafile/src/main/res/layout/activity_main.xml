<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <!--<Button-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/btnRoot"-->
        <!--android:text="获取ROOT权限"/>-->
    <EditText
        android:hint="Input ipAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextIpAdress"
        android:text="@string/default_ip_address"/>
    <EditText
        android:hint="Input userName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_user_name"
        android:id="@+id/editTextUserName"/>
    <EditText
        android:hint="Input password"
        android:password="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_user_pwd"
        android:id="@+id/editTextPassword"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:text="sign in"/>
    <TextView
        android:singleLine="true"
        android:ellipsize="start"
        android:maxEms="20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFileScanner"
        android:hint="scan fileList"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSnapshot"
        android:text="Back"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSync"
        android:text="Sync"/>
</LinearLayout>
